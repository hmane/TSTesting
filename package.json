{
  "name": "your-spfx-project",
  "version": "0.0.1",
  "private": true,
  "main": "lib/index.js",
  "engines": {
    "node": ">=21.14.0 <23.0.0"
  },
  "scripts": {
    "build": "gulp bundle",
    "clean": "gulp clean && npm run clean:stats",
    "test": "gulp test",
    
    "debug": "npm run clean && gulp bundle --ship=false && gulp package-solution --ship=false",
    "release": "npm run clean && gulp bundle --ship && gulp package-solution --ship",
    "serve": "npm run serve:fast",
    
    "serve:fast": "gulp serve --nobrowser",
    "serve:legacy": "gulp serve",
    "serve:https": "gulp serve --https --nobrowser",
    
    "build:debug": "npm run debug",
    "build:production": "npm run release",
    "build:analyze": "npm run release && npm run analyze",
    
    "package:debug": "npm run debug",
    "package:release": "npm run release",
    "package:deploy": "npm run release && npm run deploy:package",
    
    "analyze": "gulp analyze-bundle",
    "clean:stats": "gulp clean-stats",
    "clean:temp": "gulp clean-temp",
    "clean:all": "npm run clean && npm run clean:temp",
    
    "deploy:package": "echo 'Deploy your .sppkg from sharepoint/solution folder'",
    "deploy:assets": "echo 'Deploy your assets from temp/deploy folder'",
    
    "dev": "npm run serve:fast",
    "dev:https": "npm run serve:https",
    "start": "npm run serve:fast",
    
    "validate": "npm run lint && npm run type-check",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    
    "precommit": "npm run validate",
    "prebuild": "npm run type-check",
    "prepackage": "npm run validate",
    
    "info": "npm run info:env && npm run info:deps",
    "info:env": "node --version && npm --version && gulp --version",
    "info:deps": "npm ls --depth=0",
    "info:bundle": "npm run analyze",
    
    "reset": "npm run clean:all && npm install",
    "fresh": "rm -rf node_modules package-lock.json && npm install",
    "update:spfx": "npm update @microsoft/sp-build-web @microsoft/sp-core-library @microsoft/sp-webpart-base @microsoft/sp-property-pane @microsoft/sp-lodash-subset",
    
    "help": "echo 'Available scripts:' && npm run | grep -E '^  [a-z]'"
  },
  "dependencies": {
    "@microsoft/sp-core-library": "1.21.0",
    "@microsoft/sp-property-pane": "1.21.0",
    "@microsoft/sp-webpart-base": "1.21.0",
    "@microsoft/sp-lodash-subset": "1.21.0",
    "@microsoft/sp-office-ui-fabric-core": "1.21.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@microsoft/sp-build-web": "1.21.0",
    "@microsoft/sp-tslint-rules": "1.21.0",
    "@microsoft/sp-module-interfaces": "1.21.0",
    "@types/react": "17.0.45",
    "@types/react-dom": "17.0.17",
    "@types/webpack-env": "1.16.2",
    "typescript": "4.7.4",
    "spfx-fast-serve-helpers": "~1.21.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "open": "^8.4.0",
    "del": "^6.1.1"
  },
  "bundleAnalyzer": {
    "enabled": true,
    "config": {
      "analyzerMode": "static",
      "reportFilename": "temp/stats/bundle-report.html",
      "openAnalyzer": false
    }
  },
  "fastServe": {
    "enabled": true,
    "config": {
      "port": 4321,
      "https": true,
      "open": false,
      "hot": true,
      "liveReload": true,
      "watchOptions": {
        "aggregateTimeout": 300,
        "poll": false
      }
    }
  }
}
