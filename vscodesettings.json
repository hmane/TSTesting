{
	"cSpell.userWords": [
		"spfx",
		"sharepoint",
		"webpart",
		"webparts",
		"listitem",
		"listitems",
		"pnpjs",
		"tsx",
		"scss",
		"devkit",
		"nodejs",
		"typescript",
		"javascript",
		"useState",
		"useEffect",
		"useContext",
		"useReducer",
		"props",
		"jsx",
		"callables",
		"onprem",
		"provisioning",
		"contenttype",
		"contenttypes",
		"fieldref",
		"fieldrefs",
		"listinstance",
		"listinstances",
		"sitecollection",
		"subweb",
		"subwebs",
		"clientside",
		"customaction",
		"customactions",
		"siteconfiguration",
		"powershell",
		"fastserve",
		"bundleanalyzer",
		"webpack",
		"tsconfig",
		"gulpfile"
	],

	// File Management
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 1000,
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,

	// Git Configuration
	"git.autofetch": true,
	"git.enableSmartCommit": true,
	"git.confirmSync": false,
	"git.autofetchPeriod": 180,

	// Editor Appearance & Behavior
	"workbench.tree.indent": 16,
	"workbench.colorTheme": "Dark+ (default dark)",
	"workbench.editor.enablePreview": false,
	"workbench.editor.tabCloseButton": "right",
	"workbench.editor.tabActionLocation": "right",
	"workbench.editor.limit.enabled": true,
	"workbench.editor.limit.value": 15,
	"workbench.editor.closeOnFileDelete": true,
	"workbench.editor.highlightModifiedTabs": true,

	// Font & Display (Optimized for large monitors)
	"editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 18,
	"editor.lineHeight": 26,
	"editor.fontWeight": "normal",
	"editor.minimap.renderCharacters": false,
	"editor.minimap.scale": 2,
	"editor.minimap.maxColumn": 120,

	// Code Formatting & Behavior
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.formatOnType": true,
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
	"editor.detectIndentation": false,
	"editor.trimAutoWhitespace": true,

	// IntelliSense & Suggestions
	"editor.inlineSuggest.enabled": true,
	"editor.suggestSelection": "first",
	"editor.suggest.insertMode": "replace",
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "on",
	"editor.suggest.snippetsPreventQuickSuggestions": false,
	"editor.suggest.fontSize": 16,
	"editor.suggest.lineHeight": 22,
	"editor.wordBasedSuggestions": "matchingDocuments",

	// Visual Enhancements
	"editor.cursorStyle": "line",
	"editor.cursorBlinking": "smooth",
	"editor.renderWhitespace": "selection",
	"editor.renderControlCharacters": false,
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"editor.semanticHighlighting.enabled": true,
	"breadcrumbs.enabled": true,

	// Terminal Configuration
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.fontFamily": "Fira Code, Consolas",
	"terminal.integrated.defaultProfile.windows": "PowerShell",
	"terminal.integrated.fontSize": 16,
	"terminal.integrated.shellIntegration.enabled": true,
	"terminal.integrated.rightClickBehavior": "copyPaste",
	"terminal.integrated.confirmOnExit": "never",
	"terminal.integrated.scrollback": 10000,
	"terminal.integrated.smoothScrolling": true,

	// Explorer Settings
	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.sortOrder": "type",

	// TypeScript Configuration
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.suggest.autoImports": true,
	"typescript.preferences.includePackageJsonAutoImports": "on",
	"typescript.inlayHints.parameterNames.enabled": "literals",
	"typescript.inlayHints.parameterTypes.enabled": true,
	"typescript.inlayHints.variableTypes.enabled": false,
	"typescript.inlayHints.propertyDeclarationTypes.enabled": true,
	"typescript.inlayHints.functionLikeReturnTypes.enabled": true,
	"typescript.suggest.paths": true,
	"typescript.suggest.includeAutomaticOptionalChainCompletions": true,
	"typescript.tsserver.maxTsServerMemory": 4096,

	// JavaScript Configuration
	"javascript.preferences.importModuleSpecifier": "relative",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.suggest.autoImports": true,

	// Code Actions on Save
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.organizeImports": "explicit",
		"source.addMissingImports": "explicit",
		"source.removeUnusedImports": "explicit"
	},

	// ESLint Configuration
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"eslint.format.enable": false,
	"eslint.lintTask.enable": true,
	"eslint.run": "onType",

	// Prettier Configuration
	"prettier.singleQuote": true,
	"prettier.useTabs": false,
	"prettier.tabWidth": 2,
	"prettier.printWidth": 120,
	"prettier.semi": true,
	"prettier.trailingComma": "es5",
	"prettier.bracketSpacing": true,
	"prettier.jsxSingleQuote": true,
	"prettier.arrowParens": "avoid",

	// Emmet Configuration
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"typescript": "typescriptreact"
	},
	"emmet.showExpandedAbbreviation": "always",
	"emmet.triggerExpansionOnTab": true,

	// GitHub Copilot Configuration
	"github.copilot.enable": {
		"*": true,
		"yaml": true,
		"xml": true,
		"powershell": true,
		"plaintext": false
	},

	// PowerShell Configuration
	"powershell.powerShellDefaultVersion": "PowerShell (x64)",
	"powershell.integratedConsole.showOnStartup": false,
	"powershell.integratedConsole.suppressStartupBanner": true,
	"powershell.scriptAnalysis.enable": true,
	"powershell.codeFormatting.preset": "OTBS",
	"powershell.codeFormatting.openBraceOnSameLine": true,
	"powershell.codeFormatting.newLineAfterOpenBrace": true,
	"powershell.codeFormatting.newLineAfterCloseBrace": true,
	"powershell.integratedConsole.focusConsoleOnExecute": false,

	// Performance & Memory
	"typescript.disableAutomaticTypeAcquisition": false,
	"typescript.preferences.useLabelDetailsInCompletionEntries": true,

	// Search & Replace
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/dist": true,
		"**/lib": true,
		"**/temp": true,
		"**/coverage": true,
		"**/sharepoint": true,
		"**/.cache": true,
		"**/release": true,
		"**/.npmrc": true
	},

	// File Watcher
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true,
		"**/dist/**": true,
		"**/lib/**": true,
		"**/temp/**": true,
		"**/sharepoint/**": true,
		"**/release/**": true
	},

	// Security
	"files.exclude": {
		"**/.npmrc": true
	},

	// Windows-specific optimizations
	"security.workspace.trust.untrustedFiles": "open"
}
