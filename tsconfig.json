{
  "extends": "./node_modules/@microsoft/rush-stack-compiler-5.3/includes/tsconfig-web.json",
  "compilerOptions": {
    // Path Mapping (matches your gulpfile @ alias)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"]
    },

    // Build Performance Optimizations
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // Tree Shaking and Bundle Optimization
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "importsNotUsedAsValues": "remove",

    // Modern TypeScript Features (SPFx 1.21.1 compatible)
    "target": "ES2017",
    "lib": ["ES2017", "ES2018.Promise", "ES2019.Array", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    // Type Checking (Strict but SPFx-compatible)
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,

    // Source Maps and Debugging
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "mapRoot": "",
    "sourceRoot": "",

    // Declaration Files
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,

    // Advanced Options
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "noEmit": false,
    "noEmitOnError": false,
    "preserveWatchOutput": true,
    "pretty": true,

    // SPFx Required Features
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Module Detection
    "moduleDetection": "auto",

    // Performance Optimizations
    "useDefineForClassFields": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": [
    "node_modules",
    "lib",
    "temp",
    "dist",
    "sharepoint",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "coverage",
    ".vscode",
    ".git"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "watchOptions": {
    // File Watching Optimization
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "**/lib", "**/temp", "**/dist", "**/sharepoint"]
  },
  "typeAcquisition": {
    "enable": false,
    "include": [],
    "exclude": []
  }
}
